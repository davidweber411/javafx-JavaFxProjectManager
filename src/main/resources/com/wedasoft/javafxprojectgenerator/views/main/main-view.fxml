<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wedasoft.javafxprojectgenerator.views.main.MainViewController">
    <left>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onCreateProjectButtonClick" text="Create project &gt;" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPackageForWindowsButtonClick" text="Package fat JAR for Windows &gt;" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAboutButtonClick" text="About &gt;" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onExitButtonClick" text="Exit &gt;" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <Separator orientation="VERTICAL" />
            </children>
        </HBox>
    </left>
    <center>
        <BorderPane fx:id="borderPane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
